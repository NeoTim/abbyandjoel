max-out()
    max-width 100vw
    min-width 100vw
    max-height 100vh
    min-height 100vh
    width 100vw
    height 100vh


html
    .has-flex
        box-sizing(border-box)
        max-out()
        overflow-x hidden

        *
            box-sizing(border-box)


body
    .has-flex
        box-sizing(border-box)
        max-out()
        overflow-x hidden

.mz-flex
    flex-container()
    flex-direction(column)
    min-height 100%
    max-height 100%
    max-out()
    scroll-vertical()

    nav
        box-sizing(border-box)
        flex-element(1)
        flex-direction(row)
    main
        box-sizing(border-box)
        flex-element(2 0 auto)
        flex-direction(column)

    footer
        box-sizing(border-box)
        flex-element(1 0 auto)