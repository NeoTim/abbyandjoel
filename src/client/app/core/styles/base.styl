@keyframes animatedBackground {
    from { background-position: 0 0; }
    to { background-position: 0 100%; }
}

#nav{
    list-style: none;
    position: fixed;
    right: 20px;
    top: 20px;
    z-index: 20;
}

#nav li{
    margin: 0 0 15px 0;
}

#nav li a{
    background: url(../images/dot.png);
    display: block;
    height: 19px;
    width: 19px;
    border:2px solid #34495E;
    border-radius:100%;
}

#nav li a:hover{
    position: relative;
}

#nav li a[title]:hover:before {
  content: attr(title);
  padding: 4px 8px;
  color: #FFF;
  position: absolute;
  right: 30px;
  top: -3px;
  white-space: nowrap;
  z-index: 20;
  background:#34495E;
}

#nav li.current a{
  background: #34495E;
}

